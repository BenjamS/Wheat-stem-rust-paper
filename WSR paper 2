listRows <- list(Krow1_ssa, Krow2_sam, Krow3_aus, Krow4_wan,
                 Krow5_rca, Krow6_eur, Krow7_eas, Krow8_nam)
K <- do.call(rbind, listRows)
Kmod <- K
diag(Kmod) <- rowSums(K)
#M <- diag(rep(1, n))
