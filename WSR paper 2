this_dfPlotTot$Region <- paste0("World\n(", this_dfPlotTot$Scenario, ")")
  gg <- ggplot(this_dfPlotTot, aes(x = Commodity,
                             y = Region,
                             fill = `WSR-No WSR (Difference)`,
                             label = `WSR-No WSR (Difference)`))
