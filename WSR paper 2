  this_df$productiontype <- NULL
  
  this_df$scenario[grep("NoWSR", this_df$scenario)] <- "CC No WSR"
  #this_df$scenario[grep("WSRwrst", this_df$scenario)] <- "CC+WSR (worst case)"
