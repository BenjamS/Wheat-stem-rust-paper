dfTab <- dfFsec %>%
  subset(year == 2045 &
           Region != "World" &
           Scenario %in% c("Best case", "Worst case"))
dfTab$`WSR-No WSR` <- round(dfTab$`WSR-No WSR`, 2)
dfTab$param <- "Millions"
ggMag <- tabPlotReg(dfTab,
                      thisTitle = NULL,
                      xAxisOn = F,
                      yAxisOn = T,
                      facetTitleOnX = T,
                      facetTitleOnY = T,
                      fontParams,
                      switchGridAxes = F,
                    xAxisTicksOff = T,
                    switchColor = T)
dfTab <- dfFsec %>%
  subset(year == 2045 &
           Region != "World" &
           Scenario %in% c("Best case (%)", "Worst case (%)"))
dfTab$`WSR-No WSR` <- round(dfTab$`WSR-No WSR`, 2)
dfTab$param <- "Percent"
dfTab$Scenario <- gsub(" \\(%\\)", "", dfTab$Scenario)
ggPct <- tabPlotReg(dfTab,
                    thisTitle = NULL,
                    xAxisOn = F,
                    yAxisOn = F,
                    facetTitleOnX = T,
                    facetTitleOnY = T,
                    fontParams,
                    switchGridAxes = F,
