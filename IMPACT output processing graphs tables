# Alternative approach: mixed supply and demand side graphic
theseParams <- c("Area", "Production",
                 "Producer price")
theseCommods <- c("Wheat", "Other cereals")#, "Non-cereal\ncrops") # Leave out animal products (WSR impact on animal prods is negligle anyway)
dfSup <- getScenDiffs(df, theseParams, theseCommods, theseYrs, roundTo = 5)
#----------------------------------------------------------------
# Plot supply tables

#








theseParams <- c("Household Demand", "Export",
                 "Total Demand")
# theseParams <- c("Export", "Total Demand")
# dfDem <- prep4plotSUPorDEM(df, theseParams, theseCommods = "Wheat",
#                            theseYrs)
dfDem <- getScenDiffs(df, theseParams, theseCommods, theseYrs, roundTo = 4)
dfDem <- dfDem %>% spread(param, `WSR-No WSR (Difference)`) %>%
  mutate(`Other Demand` = `Total Demand` - `Household Demand` - `Export`) %>%
  select(-"Total Demand") %>% gather(param, `WSR-No WSR (Difference)`, Export:`Other Demand`)

# dfDem$param <- gsub("Total Demand", "Total\nDemand", dfDem$param)

dfBar <- subset(dfDem, Region == "World")# &
                  #param != "Total\nDemand")
dfBar$`WSR-No WSR (Difference)` <- round(dfBar$`WSR-No WSR (Difference)` * 10^-3, 1)
#colnames(dfBar)[ncol(dfBar)] <- "WSR-No WSR\n(Million metric tons)"
# thisTitle <- "Wheat stem rust impact on global wheat demand 2025-2050, best and worst case\nExpressed as difference in million metric tons (WSR - No WSR)"
theseColors <- randomcoloR::distinctColorPalette(k = length(unique(dfBar$param)))

demTitle <- "WSR impact on global wheat demand, difference in million metric tons (WSR - No WSR)"
ggDemWrst <- dfBar %>% subset(Scenario == "Worst case") %>%
  plotDemBars(theseColors,
              fontParams,
              facetTitleOnY = F,
              thisTitle = demTitle)
ggDemBest <- dfBar %>% subset(Scenario == "Best case") %>%
  plotDemBars(theseColors,
              fontParams,
              legendOn = T,
              axisTextOnX = T,
              facetTitleOnY = F,
              thisTitle = NULL)

