# Focus on specific year
#theseScens <- c("Best case (%)", "Worst case (%)")
theseScens <- c("Best case", "Worst case")
#dfLook <- subset(dfDem, year == 2029)
dfTab <- subset(dfDem, year == 2036 &
                  Region != "World" &
                  Scenario %in% theseScens &
                  commodity %in% theseCommods &
                  !(param %in% c("Other Demand", "Total Demand")))
dfTab$Scenario <- gsub(" \\(%\\)", "", dfTab$Scenario)
dfTab$Region <- gsub("\n", " ", dfTab$Region)
dfTab$commodity <- gsub("Other cereals", "Other\ncereals", dfTab$commodity)
thisCommodOrder <- c("Wheat", "Other\ncereals",
                     "Non-cereal\ncrops")
dfTab$commodity <- factor(dfTab$commodity, levels = thisCommodOrder)
dfTab$`WSR-No WSR` <- round(dfTab$`WSR-No WSR`, 2)
# dfTab <- subset(dfTab, year == 2036 & Region != "World" &
#                   commodity != "Total crops")
# dfTabWld <- subset(dfDem, year == 2036 & Region == "World" &
#                      commodity != "Total crops")
#fontParams[length(fontParams)] <- 3 #Increase cell text size
theseScens <- c("Worst case", "Best case") #unique(dfTab$Scenario)
theseParams <- unique(dfTab$param)
list_ggi <- list()
for(i in 1:nScens){
  thisScen <- theseScens[i]
  list_ggj <- list()
  for(j in 1:nParams){
    thisParam <- theseParams[j]
    this_dfTab <- subset(dfTab, param == thisParam &
                           Scenario == thisScen)
    this_dfTab$commodity <- factor(this_dfTab$commodity,
                                   levels = thisCommodOrder)
    # if(j == 1){facetTitleOnX <- T}else{facetTitleOnX <- F}
    # if(i == 1){facetTitleOnY <- T; yAxisOn <- F}
    # else{facetTitleOnY <- F; yAxisOn <- T}
    # if(j == nParams){xAxisOn <- T}else{xAxisOn <- F}
    # ggParam <- tabPlotReg(this_dfTab,
    #                       thisTitle = NULL,
    #                       xAxisOn,
    #                       yAxisOn,
    #                       facetTitleOnX,
    #                       facetTitleOnY,
    #                       fontParams,
    #                       switchGridAxes = T)
    
    if(j == nParams){facetTitleOnY <- T}else{facetTitleOnY <- F}
    if(i == nScens){facetTitleOnX <- T; xAxisOn <- F}
    else{facetTitleOnX <- F; xAxisOn <- T}
    if(j == 1){yAxisOn <- T}else{yAxisOn <- F}
    ggParam <- tabPlotReg(this_dfTab,
                          thisTitle = NULL,
                          xAxisOn,
                          yAxisOn,
                          facetTitleOnX,
                          facetTitleOnY,
                          fontParams,
                          switchGridAxes = T)
    
    
    # this_dfTabWld <- subset(dfTabWld, param == thisParam &
    #                           Scenario == thisScen)
    # if(j == nParams){xAxisOn <- T}else{xAxisOn <- F}
    # ggParamWld <- tabPlotReg(this_dfTabWld,
    #                          thisTitle = NULL,
    #                          xAxisOn,
    #                          yAxisOn,
    #                          facetTitleOnX = F,
    #                          facetTitleOnY = F,
    #                          fontParams)
    # ggOut <- ggParam + ggParamWld + plot_layout(ncol = 1, heights = c(8, 1))
    list_ggj[[j]] <- ggParam
  }
  ggj <- wrap_plots(list_ggj, nrow = 1)
  if(i == 1){list_ggi <- list(ggj)}else{
    list_ggi <- c(list(ggj), list_ggi)}
  
}

#thisTitle <- "Wheat stem rust impact on crop demand by region in 2036, best and worst case\nExpressed as difference in million metric tons (WSR - No WSR)"
wrap_plots(list_ggi, ncol = 1)
