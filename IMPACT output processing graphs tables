theseColors <- c("#B8D97A", "#C26EC8", "#B5C3C7")
# demTitle <- "WSR impact on global wheat demand, difference in million metric tons (WSR - No WSR)"
ggDemWrst <- dfBar %>% subset(Scenario == "Worst case") %>%
  plotDemBars(theseColors,
              fontParams,
              axisTextOnX = T,
              facetTitleOnY = T,
              thisTitle = NULL)
ggDemBest <- dfBar %>% subset(Scenario == "Best case") %>%
  plotDemBars(theseColors,
              fontParams,
              legendOn = T,
              facetTitleOnY = T,
              thisTitle = NULL)
wrap_plots(list(ggDemBest, ggDemWrst), ncol = 1)

thisFilePath <- paste0(graphicsFolder, "Bar_demWorldMag.png")
ggsave(thisFilePath,
       width = 7, height = 6)

