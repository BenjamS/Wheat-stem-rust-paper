# Table of regionally disagg'd means & max/mins over 2025-2050
dfAvg <- dfDem %>% #subset(param != "Producer price") %>%
  group_by(Region, param, commodity, Scenario) %>%
  summarise(`Mean WSR-No WSR` = mean(`WSR-No WSR`),
            `Max WSR-No WSR` = max(`WSR-No WSR`),
            `Min WSR-No WSR` = min(`WSR-No WSR`)) %>%
  as.data.frame() %>%
  gather(stat, Val, `Mean WSR-No WSR`:`Min WSR-No WSR`)
dfAvg$Val <- round(dfAvg$Val, 3)

dfAvgSub <- dfDem %>% subset(year %in% c(2029, 2036, 2045, 2048)) %>%
  group_by(Region, param, commodity, Scenario) %>%
  summarise(`Mean WSR-No WSR` = mean(`WSR-No WSR`),
            `Max WSR-No WSR` = max(`WSR-No WSR`),
            `Min WSR-No WSR` = min(`WSR-No WSR`)) %>%
  as.data.frame() %>%
  gather(stat, Val, `Mean WSR-No WSR`:`Min WSR-No WSR`)
dfAvgSub$Val <- round(dfAvgSub$Val, 3)

