#                  "Availability\n(kcal/capita/day)")
# dfFsec <- getScenDiffs(df, theseParams,
#                        theseCommods,
#                        theseYrs, roundTo = 3)

dfAvgFsec <- dfFsec %>% #subset(param != "Producer price") %>%
  group_by(Region, param, commodity, Scenario) %>%
  summarise(`Mean WSR-No WSR` = mean(`WSR-No WSR`),
            `Max WSR-No WSR` = max(`WSR-No WSR`),
            `Min WSR-No WSR` = min(`WSR-No WSR`)) %>%
  as.data.frame() %>%
  gather(stat, Val, `Mean WSR-No WSR`:`Min WSR-No WSR`)
dfAvgFsec$Val <- round(dfAvgFsec$Val, 2)

dfAvgFsecSub <- dfFsec %>% subset(year == 2045)
colnames(dfAvgFsecSub)[ncol(dfAvgFsecSub)] <- "Val"
dfAvgFsecSub$Val <- round(dfAvgFsecSub$Val, 2)


#
dfAvgFsec <- subset(dfAvgFsec, stat == "Mean WSR-No WSR")
titVec <- c("Average over 2025-2050",
            "In the global outbreak year of 2045")
listDf <- list(dfAvgFsec, dfAvgFsecSub)
listGg <- list()
for(i in 1:2){
  thisTit <- titVec[i]
  dfPlot <- listDf[[i]] %>% subset(Region != "World") %>%
    mutate(Units = Scenario)
  dfPlot$Scenario <- gsub(" \\(%\\)", "", dfPlot$Scenario)
  dfPlot$Units[grep("%", dfPlot$Units)] <- "Percent"
  dfPlot$Units[grep("case", dfPlot$Units)] <- "Millions"
  gg <- ggplot(dfPlot, aes(x = Units, y = Region,
                           fill = Val,
                           label = Val))
  gg <- gg + geom_tile(color = "black")
  gg <- gg + geom_text(size = cellText_size)
  gg <- gg + facet_wrap(~Scenario)
  gg <- gg + labs(title = thisTit)
  gg <- gg + scale_fill_gradient2(low = "cyan",
                                  mid = "white",
                                  high = "magenta",
                                  midpoint = 0)
  gg <- gg + theme_bw()
  gg <- gg + theme(strip.background = element_rect(fill = "white"),
                   strip.text = element_text(size = facetTitle_size),
                   axis.text.x = element_text(size = axisText_size),
                   axis.text.y = element_text(size = axisText_size),
                   axis.title = element_blank(),
                   axis.text = element_blank(),
                   legend.position = "none",
                   panel.grid = element_blank(),
                   plot.title = element_text(size = 7))
  if(i == 2){gg <- gg + theme(axis.text.y = element_blank())}
  listGg[[i]] <- gg
  
}

wrap_plots(listGg, nrow = 1)

thisFilePath <- paste0(graphicsFolder, "Table_fSecRegAvg.png")
ggsave(thisFilePath,
       width = 6, height = 2)















